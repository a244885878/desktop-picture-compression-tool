{
  "name": "desktop-picture-compression-tool",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env ELECTRON=true vite",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -b && cross-env ELECTRON=true vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "install:fast": "npm install --prefer-offline --no-audit --no-fund --loglevel=warn"
  },
  "dependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "antd": "^5.27.6",
    "dayjs": "^1.11.19",
    "immer": "^10.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.5",
    "sharp-bmp": "^0.1.5",
    "use-immer": "^0.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "sass": "^1.93.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.desktop-picture-compression-tool",
    "productName": "图片处理小工具",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "mac": {
      "identity": null,
      "category": "public.app-category.utilities",
      "extendInfo": {
        "NSDesktopFolderUsageDescription": "应用需要访问您的桌面文件夹以浏览和管理图片文件。",
        "NSDocumentsFolderUsageDescription": "应用需要访问您的文档文件夹以浏览和管理图片文件。",
        "NSDownloadsFolderUsageDescription": "应用需要访问您的下载文件夹以浏览和管理图片文件。",
        "NSRemovableVolumesUsageDescription": "应用需要访问可移动存储设备以浏览和管理图片文件。",
        "NSFileProviderDomainUsageDescription": "应用需要访问文件系统以浏览和管理图片文件。"
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    }
  }
}
